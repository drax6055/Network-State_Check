    <fragment
        android:id="@+id/navigation_categort_tab"
        android:name="com.dhairya.aapnidukan.BottamNavTabs.CategoryTab"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category_tab" />

    <fragment
        android:id="@+id/navigation_cart_tab"
        android:name="com.dhairya.aapnidukan.BottamNavTabs.CartTab"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart_tab" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.dhairya.aapnidukan.BottamNavTabs.Account"
