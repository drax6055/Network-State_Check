    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home_tab">

    <fragment
        android:id="@+id/navigation_home_tab"
        android:name="com.dhairya.aapnidukan.BottamNavTabs.HomeTab"
        android:label="@string/title_home"
